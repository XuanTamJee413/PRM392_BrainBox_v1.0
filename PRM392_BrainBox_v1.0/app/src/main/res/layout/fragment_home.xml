<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="16dp">

        <!-- New Account Offer Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#7C3AED">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_purple_rounded">

                <TextView
                    android:text="Ưu đãi tài khoản mới"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Nâng cấp ngay để nhận toàn bộ chức năng Premium trong 4 năm. Ưu đãi chỉ áp dụng cho tài khoản mới trong 30 ngày!"
                    android:layout_marginBottom="16dp"
                    android:textColor="#EDE9FE"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_upgrade_lifetime"
                    android:text="Nâng cấp ngay - 89k"
                    android:backgroundTint="#FBBF24"
                    android:textColor="#1F2937"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="2dp"
                    app:cornerRadius="12dp"
                    android:layout_gravity="start"
                    android:stateListAnimator="@null" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Premium Packages Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Các gói Premium khác"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:letterSpacing="0.01" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="30 Ngày - 10k"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                    <Button
                        android:id="@+id/btn_upgrade_30days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FBBF24"
                        android:text="Mua gói"
                        android:textColor="#1F2937"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:cornerRadius="10dp"
                        android:stateListAnimator="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="6 Tháng - 49k"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/btn_upgrade_6months"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FBBF24"
                        android:text="Mua gói"
                        android:textColor="#1F2937"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:cornerRadius="10dp"
                        android:stateListAnimator="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="12 Tháng - 99k"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/btn_upgrade_12months"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FBBF24"
                        android:text="Mua gói"
                        android:textColor="#1F2937"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:cornerRadius="10dp"
                        android:stateListAnimator="@null" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Documents Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Tài liệu nổi bật"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/text_see_all_docs"
                android:text="Xem tất cả"
                android:textColor="#3B82F6"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

        <!-- Documents RecyclerView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_top_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    android:scrollbars="horizontal"
                    tools:layoutManager="LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:listitem="@layout/item_document" />

                <TextView
                    android:id="@+id/text_no_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đang tải tài liệu..."
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textColor="#6B7280"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quizzes Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Quiz mới nhất"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/text_see_all_quizzes"
                android:text="Xem tất cả"
                android:textColor="#3B82F6"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

        <!-- Quizzes RecyclerView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_latest_quizzes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    android:scrollbars="horizontal"
                    tools:layoutManager="LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:listitem="@layout/item_quiz" />

                <TextView
                    android:id="@+id/text_no_quizzes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đang tải quiz..."
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textColor="#6B7280"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>