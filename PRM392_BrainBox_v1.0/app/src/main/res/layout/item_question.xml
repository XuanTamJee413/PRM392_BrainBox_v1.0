<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_item_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:text="Câu 1:"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/text_item_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="Nội dung câu hỏi sẽ hiển thị ở đây?"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radio_group_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <RadioButton
            android:id="@+id/radio_option_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. Lựa chọn A" />

        <RadioButton
            android:id="@+id/radio_option_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. Lựa chọn B" />

            <RadioButton
                android:id="@+id/radio_option_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C. Lựa chọn C" />

        <RadioButton
            android:id="@+id/radio_option_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:text="D. Lựa chọn D" />
        />

        <TextView
            android:id="@+id/text_item_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:visibility="gone"
        android:textColor="@color/design_default_color_error"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>