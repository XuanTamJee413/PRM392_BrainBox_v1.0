<resources>
    <style name="App.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/searchview_background</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>
    <style name="HomeSectionHeader" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="HomeSeeAllText" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/see_all_text_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="HomeSectionCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>